{
    "languageserver": {
        "ccls": {
            "command": "ccls",
	    "args": ["--log-file=/tmp/ccls.log","--log-file-append","-v=3"],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
		"highlight":{
			"lsRanges": true
		}
            },
	    "ccls.clang.extraArgs": [
        	"-x c++",
        	"-xc++"]
        }
    }
}

